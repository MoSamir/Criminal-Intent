<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="80dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    style="?android:attr/selectableItemBackground"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:elevation="5dp"
    app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_margin="5dp"
            android:id="@+id/swipeToDeleteLayout"
            android:layout_gravity="center"
            android:background="@color/black1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@android:drawable/ic_menu_delete"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </RelativeLayout>

        <RelativeLayout
            android:gravity="center_vertical"
            android:id="@+id/foregroundView"
            android:layout_margin="5dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:maxLines="1"
                android:id="@+id/card_crime_name"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:text="Demo Strings"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_height="wrap_content"
            />
            <CheckBox

                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:id="@+id/card_is_solved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:layout_marginBottom="5dp"
                android:id="@+id/card_crime_subtitle"
                android:maxLines="2"
                android:text="Demo Subtitle"
                android:textStyle="italic"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/card_crime_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
</android.support.v7.widget.CardView>